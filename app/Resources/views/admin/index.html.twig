{% extends 'sidebar.html.twig' %}

{% block title %}
    MMN - Accueil
{% endblock %}


{% block body %}
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12"></div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="panel panel-info">
                                <div class="panel-heading">Vous êtes connecté en tant que</div>
                                <div class="panel-body">
                                    <div class="account">
                                        {{ account }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="panel panel-primary">
                                <!-- panel head name -->
                                <div class="panel-heading">Total des valeurs</div>
                                <div class="panel-body">
                                    <ul class="list-group">
                                        <li class="list-group-item"><span class="important">{{ tablesCount }}</span> tables</li>
                                        <li class="list-group-item"><span class="important">{{ totalColumns }}</span> colonnes</li>
                                        <li class="list-group-item"><span class="important">{{ totalTuples }}</span> tuples</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-6 col-sm-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Résumé
                        </div>
                        <div class="panel-body">
                            <div  class="table-responsive">
                                <table id="hometable" class="table table-striped table-hover tablesorter">
                                    <thead>
                                    <tr>
                                        <th>Nom de la Table</th>
                                        <th>Colonnes</th>
                                        <th>Nombre de Tuples</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for tableskey, tablesval in totalArray %}
                                        <tr>
                                            <td class="title">{{ tableskey }}</td>
                                            {% for innerval in tablesval %}
                                                <td>{{ innerval }}</td>
                                            {% endfor %}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>


            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->

        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->


{% endblock %}



