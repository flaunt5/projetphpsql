{% extends 'sidebar.html.twig' %}

{% block title %}
    MMN - Visualisation des tables
{% endblock %}


{% block body %}
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">Chercher des tuples</div>
                                <div class="panel-body">
                                    <form action="#" id="form_table">
                                        <div class="form-group">
                                            <label for="table">Table</label>
                                            <input type="text" name="table" id="table" class="form-control" value="{{ table }}" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label for="id">Id</label>
                                            <input type="text" name="id" id="id" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="offset">Nombre de resultats</label>
                                            <input type="number" name="offset" id="offset" class="form-control">
                                        </div>
                                        <button id="submit" class="btn btn-default">Envoyer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-info">
                                <div class="panel-heading">Nombre de tuples</div>
                                <div class="panel-body">
                                   Il y a <span class="important">{{ nbTuples }}</span>  tuples dans <span class="account">{{ table }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row hidden" id="search_table">
                        <div class="col-sm-12">
                            <div class="panel panel-info">
                                <div class="panel-heading"><label for="searchInput">Valeur Ã  chercher</label></div>
                                <div class="panel-body">
                                    <form action="#">
                                        <div class="form-group">
                                            <input type="text" name="searchInput" class="form-control" id="searchInput" data-tablesearch="table-{{ table }}">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-12" id="result">
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->


{% endblock %}

