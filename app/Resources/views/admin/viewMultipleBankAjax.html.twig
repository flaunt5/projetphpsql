{% extends 'sidebar.html.twig' %}

{% block title %}
    MMN - Visualisation des tables
{% endblock %}


{% block body %}
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-2 col-md-12">
                    <form action="#" id="form_table">
                        <div class="form-group">
                            <label for="id">Id</label>
                            <input type="text" name="id" id="id" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="offset">Nombre de resultats</label>
                            <input type="number" name="offset" id="offset" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="table">Table</label>
                            <input type="text" name="table" id="table" class="form-control" value="{{ table }}" disabled>
                        </div>
                        <button id="submit" class="btn btn-default">Envoyer</button>
                    </form>
                    <h3><small><p class="col-lg-12">Il y a {{ nbTuples }} tuples dans {{ table }}</p></small></h3>
                    <form action="#" id="search_table" class="hidden">
                        <div class="form-group">
                            <label for="searchInput">Valeur Ã  chercher</label>
                            <input type="text" name="searchInput" class="form-control" id="searchInput" data-tablesearch="table-{{ table }}">
                        </div>
                    </form>
                </div>
                <div class="col-lg-10 col-md-12" id="result">
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->


{% endblock %}

