<div class="row">
    {% if is_granted('ROLE_INSERT') %}
    <div class="col-lg-12">
        <button type="button" class="btn btn-outline btn-success btn-lg btn-block" data-toggle="modal" data-target="#addModal">Ajouter un tuple</button>
    </div>
    {% endif %}
    <div class="col-lg-12">
        <table width="100%"
               class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline tablesorter"
               id="table-{{ table2 }}" role="grid" data-sort="asc"
               aria-describedby="dataTables-example_info" style="width: 100%;">
            <thead>
            <tr role="row">
                {% if is_granted('ROLE_EDIT') %}
                <th class="sorting_asc" tabindex="0" aria-controls="table_test"
                    rowspan="1" colspan="1" aria-sort="ascending"
                    aria-label="Editer"
                    style="width: 161px;">Editer
                </th>
                {% endif %}
                {% for name in column %}
                    <th class="sorting_asc tablehead" tabindex="0" aria-controls="table_test"
                    rowspan="1" colspan="1" aria-sort="ascending"
                    aria-label="{{ name }}" data-table="table-{{ table2 }}"
                    style="width: 161px;">
                        {{ name }}
                    </th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for key2,line in table %}
                <tr class="gradeA even result" role="row">
                    {% if is_granted('ROLE_EDIT') %}
                    <td>
                        <button type="button" class="btn btn-outline btn-info viewAction editrow"
                                value="rowselect{{ key2 }}" data-toggle="modal" data-target="#editModal">Editer
                        </button>
                        {% endif %}
                        {% if is_granted('ROLE_DELETE') %}
                        <div class="col-lg-12"></div>
                        <button type="button" class="btn btn-outline btn-danger removerow" value="rowselect{{ key2 }}"
                                data-toggle="modal" data-target="#removeModal">Supprimer
                        </button>
                    </td>
                    {% endif %}
                    {% for key,value in line %}
                        <td class="rowselect{{ key2 }}">{{ value }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>


        {#MODALS#}

        <div class="modal bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
             id="editModal">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fermer"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Edition d'un tuple</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-lg-12" id="resultAjax"></div>
                        <form action="/ajaxEditRow/{{ table_name }}" method="post" enctype="multipart/form-data"
                              role="form" id="formChangeRow">
                            {% for name in column %}
                                <div class="form-group">
                                    <label>Edition du champ : {{ name }}</label>
                                    <input type="text" class="form-control formjs" name="{{ name }}">
                                </div>
                            {% endfor %}
                            <input type="submit" type="button" class="btn btn-primary" value="Sauvegarder"
                                   id="submitChange">
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal" tabindex="-1" role="dialog" id="removeModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Suppression du tuple</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-lg-12" id="resultAjaxRemove"></div>
                        <p class="text-danger">! Attention !</p>
                        <p>
                            Vous êtes sur le point de supprimer le tuple !<br>
                            Pour ce faire cliquez-ici : </p>

                        <form action="/ajaxRemoveRow/{{ table_name }}" method="post" enctype="multipart/form-data"
                              role="form" id="formRemoveRow">
                            {% for name in column %}
                                <div class="form-group">
                                    <input type="hidden" class="form-control formjshidden" name="{{ name }}">
                                </div>
                            {% endfor %}
                            <input type="submit" type="button" class="btn btn-outline btn-danger"
                                   value="Confirmer la suppression" id="removeAjax">
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline btn-info" data-dismiss="modal">Annuler</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->



        <div class="modal" tabindex="-1" role="dialog" id="addModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Ajout d'un tuple</h4>
                    </div>
                    <div class="modal-body">
                        <div class="col-lg-12" id="resultAjaxAdd"></div>
                        <p>Ajouter un tuple dans {{ table_name }}</p>

                        <form action="/ajaxAddRow/{{ table_name }}" method="post" enctype="multipart/form-data"
                              role="form" id="formAddRow">
                            {% for name in column %}
                                <div class="form-group">
                                    <label>Ajout du champ : {{ name }}</label>
                                    <input type="text" class="form-control formjs" name="{{ name }}">
                                </div>
                            {% endfor %}
                            <input type="submit" type="button" class="btn btn-outline btn-success"
                                   value="Confirmer l'ajout" id="addAjax">
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline btn-info" data-dismiss="modal">Annuler</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->


    </div>
</div>
<script>
    $(document).on('load', function () {

    });

    $(".editrow").on('click', function (e) {
        e.preventDefault();
        var source = $("." + this.value).first();
        var target = $(".formjs");
        for (i = 0; i < {{ nbInput }}; i++) {
            var temp = target[i];
            temp.value = source.text();
            source = source.next();
        }
    });

    $('#formChangeRow').on('submit', function (e) {
        e.preventDefault();
        var $this = $(this);
        $.ajax({
            url: $this.attr('action'), // Le nom du fichier indiqué dans le formulaire
            type: $this.attr('method'), // La méthode indiquée dans le formulaire (get ou post)
            data: $this.serialize()
        }).done(function (data) {
            $('.modal').modal('hide');
            reloadTable();
            $("#resultAjax").append('<pre><p class="text-success">La mise à jour a bien été effectuée</p></pre>');
        }).fail(function () {
            $("#resultAjax").append('<pre><p class="text-danger">La mise à jour n\'a pas été effectuée</p></pre>');
        });

    });

    $(".removerow").on('click', function (e) {
        e.preventDefault();
        var source = $("." + this.value).first();
        var target = $(".formjshidden");
        for (i = 0; i < {{ nbInput }}; i++) {
            var temp = target[i];
            temp.value = source.text();
            source = source.next();
        }
    });

    $("#formRemoveRow").on("submit", function (e) {
        e.preventDefault();
        var $this = $(this);
        $.ajax({
            url: $this.attr('action'), // Le nom du fichier indiqué dans le formulaire
            type: $this.attr('method'), // La méthode indiquée dans le formulaire (get ou post)
            data: $this.serialize()
        }).done(function (data) {
            $('.modal').modal('hide');
            reloadTable();
            $("#resultAjaxRemove").append('<pre><p class="text-success">La suppression à bien été effectuée</p></pre>');
        }).fail(function () {
            $("#resultAjaxRemove").append('<pre><p class="text-danger">La suppresson n\'a pas été effectuée</p></pre>');
        });
    });

    $("#formAddRow").on("submit", function (e) {
        e.preventDefault();
        var $this = $(this);
        $.ajax({
            url: $this.attr('action'), // Le nom du fichier indiqué dans le formulaire
            type: $this.attr('method'), // La méthode indiquée dans le formulaire (get ou post)
            data: $this.serialize()
        }).done(function (data) {
            $('.modal').modal('hide');
            reloadTable();
            $("#resultAjaxAdd").append('<pre><p class="text-success">L\'ajout à bien été effectuée</p></pre>');
        }).fail(function () {
            $("#resultAjaxAdd").append('<pre><p class="text-danger">L\'ajout n\'a pas été effectuée</p></pre>');
        });
    });

</script>
