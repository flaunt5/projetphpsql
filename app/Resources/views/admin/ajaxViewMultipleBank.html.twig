<div class="row">
    <div class="col-sm-12">
        <table width="100%"
               class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
               id="table-{{ table2 }}" role="grid" data-sort="asc"
               aria-describedby="dataTables-example_info" style="width: 100%;">
            <thead>
            <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="table_test"
                    rowspan="1" colspan="1" aria-sort="ascending"
                    aria-label="Editer"
                    style="width: 161px;">Editer
                </th>
                {% for name in column %}
                    <th class="sorting_asc tablehead" tabindex="0" aria-controls="table_test"
                    rowspan="1" colspan="1" aria-sort="ascending"
                    aria-label="{{ name }}" data-table="table-{{ table2 }}"
                    style="width: 161px;">
                        {{ name }}
                    </th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for key2,line in table %}
                <tr class="gradeA even" role="row">

                    <td> <form action="">
                            <input type="hidden" name="{{ table2 }}" value="{{ ids[key2] }}">
                            <input type="submit" class="btn btn-outline btn-info viewAction" value="Editer">
                        </form>

                        <div class="col-lg-12"> </div>
                        <button type="button" class="btn btn-outline btn-danger">Supprimer</button></td>
                    {% for key,value in line %}
                        <td>{{ value }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
