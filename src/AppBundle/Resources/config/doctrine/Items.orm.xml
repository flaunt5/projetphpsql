<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Items" table="items">
    <indexes>
      <index name="itemTypeId" columns="itemTypeId"/>
    </indexes>
    <id name="iditems" type="integer" column="idItems">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="desc" type="text" column="desc" length="16777215" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="price" type="decimal" column="price" precision="10" scale="0" nullable="true"/>
    <field name="level" type="boolean" column="level" nullable="true"/>
    <field name="family" type="string" column="family" length="32" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="itemtypeid" type="integer" column="itemTypeId" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
